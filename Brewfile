# Bundler for non-Ruby dependencies from Homebrew, Homebrew Cask, Mac App Store and Whalebrew.
tap "homebrew/bundle"

# A CLI workflow for the administration of macOS applications distributed as binaries 
tap "homebrew/cask"

# Default formulae for the missing package manager for macOS
tap "homebrew/core"

# Manage background services with macOS' launchctl daemon manager
# Example services: dnsmaq, postgresql, redis
tap "homebrew/services"

# Distributed revision control system
# Surprised it doesn’t come pre-packaged in macOS?
# Seems like XCode Command Line Tools installs git, too
brew "git"

# User-friendly cURL replacement (command-line HTTP client)
# https://httpie.io/
brew "httpie"

# Lightweight and flexible command-line JSON processor
# brew "jq"

# Mac App Store command-line interface
brew "mas"

# Object-relational database system
# Used it when learning about databases at Launch School
brew "postgresql", restart_service: true

# Install various Ruby versions and implementations
# brew "ruby-build"

# Ruby version manager
# Only focuses on switching Ruby versions
# You need to install Ruby versions yourself, or use ruby-build
# https://github.com/rbenv/rbenv/wiki/Why-rbenv%3F
# brew "rbenv"

# Simplified and community-driven man pages
brew "tldr"

# Display directories as trees (with optional color/HTML output)
brew "tree"

# Everything you need to get started with Heroku
# brew "heroku/brew/heroku"


